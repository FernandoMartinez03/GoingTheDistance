
class Solution(object):
    def findClosestNumber(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        tentativo = float('inf')
        best = 0

        for i in range(len(nums)):
            x = abs(nums[i])
            if x < tentativo:
                tentativo = x
                best = nums[i]
            elif x == tentativo:
                if nums[i] > best:
                    best = nums[i]
        return best
